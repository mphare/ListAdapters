<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hello World, MyActivity"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stable"
        android:id="@+id/stableButton"
        android:onClick="gotoListView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:id="@+id/secondLine"
        android:text="Stable Array Adapter"
        android:textSize="16sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/stableButton"
        android:layout_toRightOf="@+id/stableButton"
        android:layout_alignTop="@+id/stableButton"
        android:gravity="center_vertical"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:text="@string/simple_listactivity_label"
        android:id="@+id/textView3"
        android:textSize="16sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/simpleButton"
        android:layout_toRightOf="@+id/simpleButton"
        android:layout_alignTop="@+id/simpleButton"
        android:gravity="center_vertical"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple"
        android:id="@+id/simpleButton"
        android:onClick="gotoListLayout"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/stableButton"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:id="@+id/editText"
        android:text="Simple List Fragment Activity"
        android:textSize="16sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/simpleFragmentbutton"
        android:layout_toEndOf="@+id/simpleFragmentbutton"
        android:layout_alignTop="@+id/simpleFragmentbutton"
        android:gravity="center_vertical"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Fragment"
        android:id="@+id/simpleFragmentbutton"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:onClick="gotoSimpleFragmentActivity"
        android:enabled="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Layout"
        android:id="@+id/listLayoutButton"
        android:layout_below="@+id/simpleFragmentbutton"
        android:layout_alignParentStart="true"
        android:onClick="gotoListLayout"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="List Layout Activity"
        android:id="@+id/textView2"
        android:layout_marginLeft="5dip"
        android:layout_alignBottom="@+id/listLayoutButton"
        android:layout_toEndOf="@+id/listLayoutButton"
        android:layout_below="@+id/editText"
        android:textSize="16sp"
        android:gravity="center_vertical"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Adapter"
        android:id="@+id/button"
        android:layout_below="@+id/listLayoutButton"
        android:layout_alignParentStart="true"
        android:onClick="gotoCustomView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="Custom Adapter Activity"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_alignTop="@+id/button"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5px"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cursor Adapter"
        android:id="@+id/cursorButton"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:onClick="gotoCursorActivity"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:text="Cursor Adapter Activity"
        android:id="@+id/textView6"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/cursorButton"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/cursorButton"/>

</RelativeLayout>

