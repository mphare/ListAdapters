<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello World, MyActivity"
        android:gravity="center"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stable"
        android:id="@+id/stableButton"
        android:onClick="gotoListView"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="33dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/secondLine"
        android:text="Stable Array Adapter"
        android:textSize="16sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:gravity="center_vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        android:layout_marginStart="2dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/stableButton"
        app:layout_constraintLeft_toRightOf="@+id/simpleButton" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/simple_listactivity_label"
        android:id="@+id/textView3"
        android:textSize="16sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:gravity="center_vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/simpleFragmentbutton"
        android:layout_marginStart="3dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/secondLine"
        app:layout_constraintTop_toTopOf="@+id/simpleButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple"
        android:id="@+id/simpleButton"
        android:onClick="gotoSimpleLayout"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/stableButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/stableButton" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/editText"
        android:text="Simple List Fragment Activity"
        android:textSize="16sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:gravity="center_vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="48dp"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/simpleFragmentbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Fragment"
        android:id="@+id/simpleFragmentbutton"
        android:onClick="gotoSimpleFragmentActivity"
        android:enabled="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/simpleButton"
        app:layout_constraintTop_toBottomOf="@+id/simpleButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/simpleButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Layout"
        android:id="@+id/listLayoutButton"
        android:onClick="gotoListLayout"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/simpleFragmentbutton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/simpleFragmentbutton" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="List Layout Activity"
        android:id="@+id/textView2"
        android:textSize="16sp"
        android:gravity="center_vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simpleFragmentbutton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/listLayoutButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Adapter"
        android:id="@+id/button"
        android:onClick="gotoCustomView"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/listLayoutButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/listLayoutButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Custom Adapter Activity"
        android:id="@+id/textView5"
        android:textSize="16sp"
        android:gravity="center_vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        android:layout_marginTop="48dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="48dp"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cursor Adapter"
        android:id="@+id/cursorButton"
        android:onClick="gotoCursorActivity"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/button" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Cursor Adapter Activity"
        android:id="@+id/textView6"
        android:textSize="16sp"
        android:gravity="center_vertical"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/cursorButton"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/cursorButton" />

</android.support.constraint.ConstraintLayout>

